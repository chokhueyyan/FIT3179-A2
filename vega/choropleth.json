{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "params": [
    {
      "name": "YearSel",
      "value": null,
      "bind": {
        "input": "select",
        "options": [null, 2016, 2017, 2018, 2019, 2020, 2021, 2022, 2023],
        "labels": [
          "All years",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020",
          "2021",
          "2022",
          "2023"
        ],
        "name": "Year: "
      }
    }
  ],

  "vconcat": [
    {
      "width": 800,
      "height": 450,
      "title": "GDP Density by State",
      "projection": { "type": "mercator" },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/chokhueyyan/FIT3179/refs/heads/main/Crime_Econ.csv"
          },
          "transform": [
            { "calculate": "toDate(datum.date)", "as": "d" },
            { "calculate": "year(datum.d)", "as": "yr" },
            { "calculate": "toNumber(datum['gdp/pop'])", "as": "gdp_per_pop" },
            { "filter": "YearSel != null ? datum.yr == YearSel : true" },
            {
              "aggregate": [{ "op": "argmax", "field": "d", "as": "row" }],
              "groupby": ["state"]
            },
            {
              "lookup": "state",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/chokhueyyan/FIT3179/refs/heads/main/malaysia_map.topojson",
                  "format": {
                    "type": "topojson",
                    "feature": "ne_10m_admin_1_states_provinces"
                  }
                },
                "key": "properties.name"
              },
              "as": "geo",
              "default": null
            },
            {
              "filter": "datum.geo != null && (!datum.geo.properties.admin || datum.geo.properties.admin == 'Malaysia')"
            }
          ],
          "mark": { "type": "geoshape", "stroke": "white" },
          "encoding": {
            "shape": { "field": "geo", "type": "geojson" },
            "color": {
              "field": "row.gdp_per_pop",
              "type": "quantitative",
              "title": "GDP Density",
              "scale": {
                "type": "threshold",
                "domain": [30, 60, 100, 150],
                "range": ["#edf8fb", "#b2e2e2", "#66c2a4", "#2ca25f", "#006d2c"]
              }
            },
            "tooltip": [
              { "field": "state", "type": "nominal", "title": "State" },
              { "field": "row.yr", "type": "quantitative", "title": "Year" },
              {
                "field": "row.gdp_per_pop",
                "type": "quantitative",
                "title": "GDP Density",
                "format": ".2f"
              }
            ]
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/chokhueyyan/FIT3179/refs/heads/main/malaysia_map.topojson",
            "format": { "type": "topojson", "feature": "ne_10m_graticules_1" }
          },
          "mark": {
            "type": "geoshape",
            "stroke": "#ccc",
            "strokeDash": [2, 2],
            "fill": null
          }
        },

        {
          "data": {
            "url": "https://raw.githubusercontent.com/chokhueyyan/FIT3179/refs/heads/main/Crime_Econ.csv"
          },
          "transform": [
            { "filter": "YearSel == null || year(datum.date) == YearSel" },
            {
              "aggregate": [{ "op": "argmax", "field": "date", "as": "row" }],
              "groupby": ["state", "lat", "lon"]
            },
            {
              "filter": "indexof(['Perlis','Pulau Pinang','Terengganu','Pahang','Selangor','Johor','Sabah','Sarawak'], datum.state) >= 0"
            },
            {
              "calculate": "datum.state == 'Sabah' || datum.state == 'Sarawak' ? 12 : -8",
              "as": "dy"
            }
          ],
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -12,
            "fontSize": 11.5,
            "fontStyle": "italic"
          },
          "encoding": {
            "longitude": { "field": "lon", "type": "quantitative" },
            "latitude": { "field": "lat", "type": "quantitative" },
            "dy": { "field": "dy" },
            "text": { "field": "state" },
            "color": { "value": "black" }
          }
        }
      ]
    },

    {
      "width": 800,
      "height": 420,
      "title": "GDP by State",
      "data": {
        "url": "https://raw.githubusercontent.com/chokhueyyan/FIT3179/refs/heads/main/Crime_Econ.csv"
      },
      "transform": [
        { "calculate": "toDate(datum.date)", "as": "d" },
        { "calculate": "year(datum.d)", "as": "yr" },
        { "calculate": "toNumber(datum['gdp/pop'])", "as": "gdp_per_pop" },
        { "filter": "YearSel != null ? datum.yr == YearSel : true" },
        {
          "aggregate": [{ "op": "argmax", "field": "d", "as": "row" }],
          "groupby": ["state"]
        },

        { "calculate": "datum.row.gdp_per_pop", "as": "val" },

        {
          "window": [{ "op": "rank", "as": "rank_val" }],
          "sort": [{ "field": "val", "order": "descending" }]
        }
      ],
      "mark": { "type": "bar" },
      "encoding": {
        "x": {
          "field": "state",
          "type": "nominal",
          "sort": { "field": "val", "order": "descending" },
          "axis": { "labelAngle": -35 },
          "title": "State"
        },
        "y": {
          "field": "val",
          "type": "quantitative",
          "title": "GDP Density",
          "axis": { "format": ",.0f", "tickCount": 6 }
        },
        "color": {
          "condition": { "test": "datum.rank_val <= 3", "value": "#006d2c" },
          "value": "#c8c8c8"
        },
        "opacity": {
          "condition": { "test": "datum.rank_val <= 3", "value": 1 },
          "value": 0.6
        },
        "tooltip": [
          { "field": "state", "type": "nominal", "title": "State" },
          { "field": "row.yr", "type": "quantitative", "title": "Year" },
          {
            "field": "val",
            "type": "quantitative",
            "title": "GDP Density",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}
