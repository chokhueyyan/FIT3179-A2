{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "params": [
    {
      "name": "YearSel",
      "bind": {
        "input": "select",
        "options": [null, 2016, 2017, 2018, 2019, 2020, 2021, 2022, 2023],
        "labels": [
          "All years",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020",
          "2021",
          "2022",
          "2023"
        ],
        "name": "Year: "
      }
    },
    {
      "name": "TypeSel",
      "bind": {
        "input": "select",
        "options": [
          null,
          "causing_injury",
          "murder",
          "rape",
          "robbery_gang_armed",
          "robbery_gang_unarmed",
          "robbery_solo_armed",
          "robbery_solo_unarmed",
          "break_in",
          "theft_other",
          "theft_vehicle_lorry",
          "theft_vehicle_motorcar",
          "theft_vehicle_motorcycle"
        ],
        "labels": [
          "All types",
          "causing_injury",
          "murder",
          "rape",
          "robbery_gang_armed",
          "robbery_gang_unarmed",
          "robbery_solo_armed",
          "robbery_solo_unarmed",
          "break_in",
          "theft_other",
          "theft_vehicle_lorry",
          "theft_vehicle_motorcar",
          "theft_vehicle_motorcycle"
        ],
        "name": "Crime type: "
      }
    }
  ],

  "vconcat": [
    {
      "title": "Total Crimes by State",
      "width": 800,
      "height": 450,
      "projection": { "type": "mercator" },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/chokhueyyan/FIT3179/refs/heads/main/malaysia_map.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_10m_admin_1_states_provinces"
            }
          },
          "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/chokhueyyan/FIT3179/refs/heads/main/malaysia_map.topojson",
            "format": { "type": "topojson", "feature": "ne_10m_graticules_1" }
          },
          "mark": {
            "type": "geoshape",
            "stroke": "#ccc",
            "strokeDash": [2, 2],
            "fill": null
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/chokhueyyan/FIT3179/refs/heads/main/Crime_Econ.csv"
          },
          "transform": [
            { "filter": "YearSel == null || year(datum.date) == YearSel" },
            { "filter": "TypeSel == null || datum.type == TypeSel" },
            {
              "aggregate": [
                { "op": "sum", "field": "crimes", "as": "total_crimes" },
                {
                  "op": "max",
                  "field": "total_population",
                  "as": "total_population"
                },
                { "op": "max", "field": "total_gdp", "as": "total_gdp" }
              ],
              "groupby": ["state", "lat", "lon"]
            },
            { "calculate": "datum.total_population * 1000", "as": "pop_people" }
          ],
          "mark": {
            "type": "circle",
            "opacity": 0.7,
            "stroke": "white",
            "strokeWidth": 0.3
          },
          "encoding": {
            "longitude": { "field": "lon", "type": "quantitative" },
            "latitude": { "field": "lat", "type": "quantitative" },
            "size": {
              "field": "total_gdp",
              "type": "quantitative",
              "title": "Total GDP (RM Million)",
              "scale": {
                "type": "threshold",
                "domain": [50000, 100000, 200000, 500000],
                "range": [50, 100, 190, 300, 420]
              }
            },
            "color": {
              "field": "total_crimes",
              "type": "quantitative",
              "title": "Total crimes",
              "scale": {
                "type": "threshold",
                "domain": [50, 200, 500, 1000],
                "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#de2d26", "#a50f15"]
              }
            },
            "tooltip": [
              { "field": "state", "title": "State" },
              { "field": "pop_people", "title": "Population", "format": "," },
              {
                "field": "total_crimes",
                "title": "Total crimes",
                "format": ","
              },
              { "field": "total_gdp", "title": "GDP", "format": "," }
            ]
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/chokhueyyan/FIT3179/refs/heads/main/Crime_Econ.csv"
          },
          "transform": [
            { "filter": "YearSel == null || year(datum.date) == YearSel" },
            { "filter": "TypeSel == null || datum.type == TypeSel" },
            {
              "aggregate": [
                { "op": "sum", "field": "crimes", "as": "total_crimes" },
                {
                  "op": "max",
                  "field": "total_population",
                  "as": "total_population"
                },
                { "op": "max", "field": "total_gdp", "as": "total_gdp" }
              ],
              "groupby": ["state", "lat", "lon"]
            },
            {
              "filter": "indexof(['Perlis', 'Pulau Pinang', 'Terengganu', 'Pahang', 'Selangor','Johor','Sabah','Sarawak'], datum.state) >= 0"
            },
            {
              "calculate": "datum.state == 'Sabah' || datum.state == 'Sarawak' ? 12 : -8",
              "as": "dy"
            }
          ],
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -12,
            "fontSize": 11.5,
            "fontStyle": "italic"
          },
          "encoding": {
            "longitude": { "field": "lon", "type": "quantitative" },
            "latitude": { "field": "lat", "type": "quantitative" },
            "dy": { "field": "dy", "type": "quantitative" },
            "text": { "field": "state" },
            "color": { "value": "black" }
          }
        }
      ]
    },

    {
      "title": "Crimes Rates by State and Type",
      "width": 800,
      "height": 420,
      "data": {
        "url": "https://raw.githubusercontent.com/chokhueyyan/FIT3179/refs/heads/main/Crime_Econ.csv"
      },

      "params": [
        {
          "name": "TypeLegend",
          "select": { "type": "point", "fields": ["type"], "empty": "all" },
          "bind": "legend"
        }
      ],

      "transform": [
        { "calculate": "year(toDate(datum.date))", "as": "yr" },
        { "filter": "YearSel == null || datum.yr == YearSel" },
        { "filter": "TypeSel == null || datum.type == TypeSel" },
        { "filter": { "param": "TypeLegend" } },
        {
          "aggregate": [
            { "op": "sum", "field": "crimes", "as": "total_crimes" }
          ],
          "groupby": ["state", "type"]
        }
      ],

      "mark": { "type": "bar" },

      "encoding": {
        "x": {
          "field": "state",
          "type": "nominal",
          "title": "State",
          "axis": { "labelAngle": -35 },
          "sort": {
            "op": "sum",
            "field": "total_crimes",
            "order": "descending"
          }
        },
        "y": {
          "field": "total_crimes",
          "type": "quantitative",
          "title": "Total crimes",
          "axis": { "format": ",.0f", "tickCount": 6 }
        },
        "color": {
          "field": "type",
          "type": "nominal",
          "legend": {
            "title": "Crime Type (Click to filter)",
            "columns": 1
          },
          "scale": {
            "domain": [
              "causing_injury",
              "murder",
              "rape",
              "robbery_gang_armed",
              "robbery_gang_unarmed",
              "robbery_solo_armed",
              "robbery_solo_unarmed",
              "break_in",
              "theft_other",
              "theft_vehicle_lorry",
              "theft_vehicle_motorcar",
              "theft_vehicle_motorcycle"
            ],
            "range": [
              "#a6cee3",
              "#1f78b4",
              "#b2df8a",
              "#33a02c",
              "#fb9a99",
              "#e31a1c",
              "#fdbf6f",
              "#ff7f00",
              "#cab2d6",
              "#6a3d9a",
              "#ffff99",
              "#b15928"
            ]
          }
        },

        "order": { "field": "type" },
        "tooltip": [
          { "field": "state", "title": "State" },
          { "field": "type", "title": "Crime type" },
          { "field": "total_crimes", "title": "Total crimes", "format": "," }
        ]
      }
    }
  ],

  "resolve": { "scale": { "color": "independent", "size": "independent" } }
}
